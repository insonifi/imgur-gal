{
	"root": true,
	"env": {
		"browser": true,
		"es6": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": ["flowtype", "lodash-fp", "import", "react", "react-hooks"],
	"extends": ["airbnb", "plugin:flowtype/recommended", "prettier", "prettier/react"],
	"settings": {
		"import/resolver": {
			"webpack": {
				"config": "webpack.config.js"
			}
		}
	}
}
